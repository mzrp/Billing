@model TeleBilling_v02_.Models.DisplayModels.AgreementDisplay

@{
    ViewBag.Title = "ViewDetails";

    string sDay = Model.Date.Day.ToString().PadLeft(2, '0');
    string sMonth = Model.Date.Month.ToString().PadLeft(2, '0');
    string sYear = Model.Date.Year.ToString().PadLeft(2, '0');
    string sHour = Model.Date.Hour.ToString().PadLeft(2, '0');
    string sMinute = Model.Date.Minute.ToString().PadLeft(2, '0');
    string sSecond = Model.Date.Second.ToString().PadLeft(2, '0');

    string sCurDate = "";
    sCurDate += sDay + "-";
    sCurDate += sMonth + "-";
    sCurDate += sYear + " ";
    sCurDate += sHour + "-";
    sCurDate += sMinute + "-";
    sCurDate += sSecond;
}

<h2>Agreement Details</h2>
<br />

@using (Html.BeginForm("UpdateCustomerDetails", "Agreement", FormMethod.Post))
{
    <table class="table">
        <tr>
            <td>
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td class="checkbox">
                @Html.EditorFor(model => model.Status)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("CVR", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.EditorFor(model => model.Customer_cvr, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.Label("Range Start", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.EditorFor(model => model.Subscriber_range_start, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Customer", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.EditorFor(model => model.Customer_name, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.Label("Range End", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.EditorFor(model => model.Subscriber_range_end, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Date", htmlAttributes: new { @class = "control-label col-md-2" }) DD-MM-YYYY hh:mm:ss
            </td>
            <td>
                @*@Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })*@
                <input class="form-control text-box single-line" id="Date" name="Date" type="text" value="@sCurDate" />
            </td>
            <td>&nbsp;</td>
            <td>
                <input type="submit" style="margin-top:3px; padding-top:3px;" class="btn btn-info btn-sm" value="Update Customer Details" />
            </td>
        </tr>
    </table>
}

